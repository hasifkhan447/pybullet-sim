<?xml version="1.0"?>
<robot name="cylinder_bot">

  <!-- Link 0 -->
  <link name="base_link">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
    </visual>
  </link>


  <!-- Joint 1: Z rotation -->
  <link name="link1">
    <visual>
      <origin xyz="0 0 0.375" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.75"/>
      </geometry>
    </visual>
  </link>



  <joint name="joint1" type="revolute">
    <parent link="base_link"/>
    <child link="link1"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1.0" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>


  <!-- Joint 2: X rotation -->
  <joint name="joint2" type="revolute">
    <parent link="link1"/>
    <child link="link2"/>
    <origin xyz="0 0 0.75" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit effort="1.0" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <link name="link2">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
    </visual>
  </link>

  <!-- Joint 3: X rotation -->
  <joint name="joint3" type="revolute">
    <parent link="link2"/>
    <child link="link3"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit effort="1.0" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <link name="link3">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
    </visual>
  </link>

  <!-- Joint 4: Z rotation -->
  <joint name="joint4" type="revolute">
    <parent link="link3"/>
    <child link="link4"/>
    <origin xyz="0 0 0.5" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit effort="1.0" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <link name="link4">
    <visual>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.05" length="0.5"/>
      </geometry>
    </visual>
  </link>

  <!-- Joint 5: fixed motor cylinder on side -->
  <joint name="joint5" type="revolute">
    <parent link="link4"/>
    <child link="motor_link"/>
    <origin xyz="0 0 1" rpy="0 0 0"/>
    <limit effort="1.0" velocity="1.0" lower="-1.57" upper="1.57"/>
  </joint>

  <link name="motor_link">
    <visual>
      <origin xyz="0 0 1" rpy="1.5708 0 0"/>
      <geometry>
        <cylinder radius="0.02" length="0.1"/>
      </geometry>
    </visual>
  </link>

</robot>
